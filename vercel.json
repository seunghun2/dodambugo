{
    "framework": "nextjs",
    "buildCommand": "npm run build",
    "outputDirectory": ".next",
    "installCommand": "npm install",
    "crons": [
        {
            "path": "/api/cron/thanks-notify",
            "schedule": "0 1 * * *"
        }
    ],
    "redirects": [
        {
            "source": "/:path*",
            "has": [
                {
                    "type": "host",
                    "value": "dodambugo.com"
                }
            ],
            "destination": "https://maeumbugo.co.kr/:path*",
            "permanent": true
        },
        {
            "source": "/:path*",
            "has": [
                {
                    "type": "host",
                    "value": "www.dodambugo.com"
                }
            ],
            "destination": "https://maeumbugo.co.kr/:path*",
            "permanent": true
        }
    ]
}